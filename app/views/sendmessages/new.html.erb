<h1>Send messages</h1>

<%= form_with model: @send, url:send_path do |form| %>
 <% if @send.errors.any? %>
    <div class="alert alert-danger">
     <% @send.errors.full_messages.each do |message| %>
     <div><%= message %></div> 
     <% end %>
   </div>
      
    <% end %>
     <div class="mb-3" >
    <%= form.label :Name %>
     <%= form.text_field :uname,class: "form-control" %>
     </div>
 <div class="mb-3">
    <%= form.label :PhoneNum %>
  <%= form.text_field :phonenum, class: "form-control" %>
  </div>
 <div class="mb-3">
    <%= form.label :content %>
  <%= form.text_area :content, class: "form-control" %>
   </div>
   <div class="mb-3">
       <%= form.submit "Send", class: "btn btn-primary" %>
   </div>

 <% end %>